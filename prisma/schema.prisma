generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  fullName     String   @unique
  passwordHash String
  picture      String
  followedBy   User[]   @relation("UserFollows")
  following    User[]   @relation("UserFollows")
  profile      Profile?
  posts        Post[]
}

model Profile {
  id               Int          @id @default(autoincrement())
  about            String
  currentJob       String
  highestEducation String
  user             User         @relation(fields: [userId], references: [id])
  userId           Int          @unique
  experiences      Experience[]
  educations       Education[]
}

model Post {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now()) @db.Date
  content   String
  image     String?
  user      User?    @relation(fields: [userId], references: [id])
  userId    Int?
}

model Experience {
  id          Int      @id @default(autoincrement())
  job         String
  company     String
  startYear   Int
  endYear     Int?
  description String
  Profile     Profile? @relation(fields: [profileId], references: [id])
  profileId   Int?
}

model Education {
  id            Int      @id @default(autoincrement())
  school        String
  qualification String
  startYear     Int
  endYear       Int?
  Profile       Profile? @relation(fields: [profileId], references: [id])
  profileId     Int?
}

